<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="OptimalFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Commer\Optimal\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Commer\Optimal\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Commer\Optimal\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">OptimalValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">OptimalValidatorPool</argument>
            <argument name="commandPool" xsi:type="object">OptimalCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration for Vault payments -->
    <virtualType name="OptimalVaultPaymentConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Commer\Optimal\Model\Ui\ConfigProvider::CC_VAULT_CODE</argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalVaultPaymentValueHandler" type="VaultPaymentDefaultValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">OptimalVaultPaymentConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalVaultPaymentValueHandlerPool" type="VaultPaymentValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">OptimalVaultPaymentValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalCreditCardVaultFacade" type="Commer\Optimal\Model\Vault">
        <arguments>
            <argument name="config" xsi:type="object">OptimalVaultPaymentConfig</argument>
            <argument name="valueHandlerPool" xsi:type="object">OptimalVaultPaymentValueHandlerPool</argument>
            <argument name="vaultProvider" xsi:type="object">OptimalFacade</argument>
            <argument name="code" xsi:type="const">Commer\Optimal\Model\Ui\ConfigProvider::CC_VAULT_CODE</argument>
        </arguments>
    </virtualType>
    <!-- END Configuration for Vault payments -->
	
    <!-- Configuration reader -->
    <type name="Commer\Optimal\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Commer\Optimal\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </type>

    <!-- Logger, initialized with BraintreeConfig -->
    <virtualType name="OptimalLoggerForTransactionSale" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">Commer\Optimal\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>
    <type name="Commer\Optimal\Gateway\Http\Client\TransactionSale">
        <arguments>
            <argument name="customLogger" xsi:type="object">OptimalLoggerForTransactionSale</argument>
        </arguments>
    </type>
    <type name="Commer\Optimal\Gateway\Http\Client\TransactionSubmitForSettlement">
        <arguments>
            <argument name="customLogger" xsi:type="object">OptimalLoggerForTransactionSale</argument>
        </arguments>
    </type>
    <type name="Commer\Optimal\Gateway\Http\Client\TransactionRefund">
        <arguments>
            <argument name="customLogger" xsi:type="object">OptimalLoggerForTransactionSale</argument>
        </arguments>
    </type>
    <type name="Commer\Optimal\Gateway\Http\Client\TransactionVoid">
        <arguments>
            <argument name="customLogger" xsi:type="object">OptimalLoggerForTransactionSale</argument>
        </arguments>
    </type>
    <!-- END Logger, initialized with BraintreeConfig -->

    <!-- Commands infrastructure -->
    <virtualType name="OptimalCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">OptimalAuthorizeCommand</item>
                <item name="sale" xsi:type="string">OptimalSaleCommand</item>
                <item name="capture" xsi:type="string">OptimalCaptureStrategyCommand</item>
                <item name="settlement" xsi:type="string">OptimalCaptureCommand</item>
                <item name="vault_authorize" xsi:type="string">OptimalVaultAuthorizeCommand</item>
                <item name="vault_sale" xsi:type="string">OptimalVaultSaleCommand</item>
                <item name="vault_capture" xsi:type="string">OptimalVaultCaptureCommand</item>
                <item name="void" xsi:type="string">OptimalVoidCommand</item>
                <item name="refund" xsi:type="string">OptimalRefundCommand</item>
                <item name="cancel" xsi:type="string">OptimalVoidCommand</item>
                <item name="deny_payment" xsi:type="string">OptimalVoidCommand</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalCaptureStrategyCommand" type="Commer\Optimal\Gateway\Command\CaptureStrategyCommand">
        <arguments>
            <argument name="commandPool" xsi:type="object">OptimalCommandPool</argument>
        </arguments>
    </virtualType>
    <!-- END Commands infrastructure -->

    <!-- Command managers section for Vault -->
    <virtualType name="OptimalCommandManager" type="Magento\Payment\Gateway\Command\CommandManager">
        <arguments>
            <argument name="commandPool" xsi:type="object">OptimalCommandPool</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Payment\Gateway\Command\CommandManagerPool">
        <arguments>
            <argument name="executors" xsi:type="array">
                <item name="optimal" xsi:type="string">OptimalCommandManager</item>
            </argument>
        </arguments>
    </type>
    <!-- END command managers section for Vault -->

    <!-- Braintree commands  -->
    <virtualType name="OptimalAuthorizeCommand" type="Commer\Optimal\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">OptimalAuthorizeRequest</argument>
            <argument name="transferFactory" xsi:type="object">Commer\Optimal\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Commer\Optimal\Gateway\Http\Client\TransactionAuthorization</argument>
            <argument name="handler" xsi:type="object">OptimalAuthorizationHandler</argument>
            <argument name="validator" xsi:type="object">Commer\Optimal\Gateway\Validator\ResponseValidator</argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalAuthorizeRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="customer" xsi:type="string">Commer\Optimal\Gateway\Request\CustomerDataBuilder</item>
                <item name="payment" xsi:type="string">Commer\Optimal\Gateway\Request\PaymentDataBuilder</item>
                <item name="channel" xsi:type="string">Commer\Optimal\Gateway\Request\ChannelDataBuilder</item>
                <item name="address" xsi:type="string">Commer\Optimal\Gateway\Request\AddressDataBuilder</item>
                <item name="vault" xsi:type="string">Commer\Optimal\Gateway\Request\VaultDataBuilder</item>
                <item name="3dsecure" xsi:type="string">Commer\Optimal\Gateway\Request\ThreeDSecureDataBuilder</item>
                <item name="device_data" xsi:type="string">Commer\Optimal\Gateway\Request\KountPaymentDataBuilder</item>
                <item name="dynamic_descriptor" xsi:type="string">Commer\Optimal\Gateway\Request\DescriptorDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Authorization&Capture command  -->
    <virtualType name="OptimalSaleCommand" type="OptimalAuthorizeCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">OptimalSaleRequest</argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalSaleRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="authorize" xsi:type="string">OptimalAuthorizeRequest</item>
                <item name="settlement" xsi:type="string">Commer\Optimal\Gateway\Request\SettlementDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Capture commands  -->
    <virtualType name="OptimalCaptureCommand" type="Commer\Optimal\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">OptimalCaptureRequest</argument>
            <argument name="transferFactory" xsi:type="object">Commer\Optimal\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Commer\Optimal\Gateway\Http\Client\TransactionSubmitForSettlement</argument>
            <!--
            <argument name="handler" xsi:type="object">Commer\Optimal\Gateway\Response\TransactionIdHandler</argument>
            <argument name="validator" xsi:type="object">Commer\Optimal\Gateway\Validator\ResponseValidator</argument>
            -->
        </arguments>
    </virtualType>
    <virtualType name="OptimalCaptureRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="capture" xsi:type="string">Commer\Optimal\Gateway\Request\CaptureDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Vault Authorization command -->
    <virtualType name="OptimalVaultAuthorizeCommand" type="Commer\Optimal\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">OptimalVaultAuthorizeRequest</argument>
            <argument name="transferFactory" xsi:type="object">Commer\Optimal\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Commer\Optimal\Gateway\Http\Client\TransactionVaultAuthorization</argument>
            <argument name="handler" xsi:type="object">OptimalVaultResponseHandler</argument>
            <argument name="validator" xsi:type="object">Commer\Optimal\Gateway\Validator\ResponseValidator</argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalVaultAuthorizeRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="customer" xsi:type="string">Commer\Optimal\Gateway\Request\CustomerDataBuilder</item>
                <item name="payment" xsi:type="string">Commer\Optimal\Gateway\Request\PaymentDataBuilder</item>
                <item name="channel" xsi:type="string">Commer\Optimal\Gateway\Request\ChannelDataBuilder</item>
                <item name="address" xsi:type="string">Commer\Optimal\Gateway\Request\AddressDataBuilder</item>
                <item name="3dsecure" xsi:type="string">Commer\Optimal\Gateway\Request\ThreeDSecureDataBuilder</item>
                <item name="device_data" xsi:type="string">Commer\Optimal\Gateway\Request\KountPaymentDataBuilder</item>
                <item name="dynamic_descriptor" xsi:type="string">Commer\Optimal\Gateway\Request\DescriptorDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Vault Authorization&Capture command -->
    <virtualType name="OptimalVaultSaleCommand" type="OptimalVaultAuthorizeCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">OptimalVaultSaleRequest</argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalVaultSaleRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="authorize" xsi:type="string">OptimalVaultAuthorizeRequest</item>
                <item name="settlement" xsi:type="string">Commer\Optimal\Gateway\Request\SettlementDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Vault Capture (Sale actually) command -->
    <virtualType name="OptimalVaultCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">OptimalVaultCaptureRequest</argument>
            <argument name="transferFactory" xsi:type="object">Commer\Optimal\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Commer\Optimal\Gateway\Http\Client\TransactionSale</argument>
            <argument name="handler" xsi:type="object">Commer\Optimal\Gateway\Response\TransactionIdHandler</argument>
            <argument name="validator" xsi:type="object">Commer\Optimal\Gateway\Validator\ResponseValidator</argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalVaultCaptureRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="vault_capture" xsi:type="string">Commer\Optimal\Gateway\Request\VaultCaptureDataBuilder</item>
                <item name="settlement" xsi:type="string">Commer\Optimal\Gateway\Request\SettlementDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Braintree commands  -->

    <!-- Value handlers infrastructure -->
    <type name="Magento\Optimal\Gateway\Response\VaultDetailsHandler">
        <arguments>
            <argument name="paymentTokenFactory" xsi:type="object">Magento\Vault\Model\CreditCardTokenFactory</argument>
        </arguments>
    </type>
    <virtualType name="OptimalValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">OptimalConfigValueHandler</item>
                <item name="can_void" xsi:type="string">Commer\Optimal\Gateway\Config\CanVoidHandler</item>
                <item name="can_cancel" xsi:type="string">Commer\Optimal\Gateway\Config\CanVoidHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Commer\Optimal\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalAuthorizationHandler" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <!--
                <item name="payment_details" xsi:type="string">Commer\Optimal\Gateway\Response\PaymentDetailsHandler</item>
                <item name="txn_id" xsi:type="string">Commer\Optimal\Gateway\Response\TransactionIdHandler</item>
                <item name="card_details" xsi:type="string">Commer\Optimal\Gateway\Response\CardDetailsHandler</item>
                <item name="risk_data" xsi:type="string">Commer\Optimal\Gateway\Response\RiskDataHandler</item>
                <item name="vault_details" xsi:type="string">Commer\Optimal\Gateway\Response\VaultDetailsHandler</item>
                <item name="3d_secure" xsi:type="string">Commer\Optimal\Gateway\Response\ThreeDSecureDetailsHandler</item>
                -->
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalVaultResponseHandler" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <!--
                <item name="payment_details" xsi:type="string">Commer\Optimal\Gateway\Response\PaymentDetailsHandler</item>
                <item name="txn_id" xsi:type="string">Commer\Optimal\Gateway\Response\TransactionIdHandler</item>
                <item name="card_details" xsi:type="string">Commer\Optimal\Gateway\Response\CardDetailsHandler</item>
                <item name="risk_data" xsi:type="string">Commer\Optimal\Gateway\Response\RiskDataHandler</item>
                <item name="3d_secure" xsi:type="string">Commer\Optimal\Gateway\Response\ThreeDSecureDetailsHandler</item>
                -->
            </argument>
        </arguments>
    </virtualType>
    <!-- END Value handlers infrastructure -->
	
    <!-- Void Command -->
    <virtualType name="OptimalVoidCommand" type="Commer\Optimal\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="client" xsi:type="object">Commer\Optimal\Gateway\Http\Client\TransactionVoid</argument>
            <argument name="requestBuilder" xsi:type="object">Commer\Optimal\Gateway\Request\VoidDataBuilder</argument>
            <!--
            <argument name="handler" xsi:type="object">Commer\Optimal\Gateway\Response\VoidHandler</argument>
            -->
            <argument name="validator" xsi:type="object">Commer\Optimal\Gateway\Validator\GeneralResponseValidator</argument>
            
            <argument name="transferFactory" xsi:type="object">Commer\Optimal\Gateway\Http\TransferFactory</argument>
            
        </arguments>
    </virtualType>

    <!-- Refund Command -->
    <virtualType name="OptimalRefundCommand" type="Commer\Optimal\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="client" xsi:type="object">Commer\Optimal\Gateway\Http\Client\TransactionRefund</argument>
            <argument name="requestBuilder" xsi:type="object">Commer\Optimal\Gateway\Request\RefundDataBuilder</argument>
            <argument name="validator" xsi:type="object">Commer\Optimal\Gateway\Validator\GeneralResponseValidator</argument>
            <!--
            <argument name="handler" xsi:type="object">Commer\Optimal\Gateway\Response\RefundHandler</argument>
            -->
            <argument name="transferFactory" xsi:type="object">Commer\Optimal\Gateway\Http\TransferFactory</argument>
        </arguments>
    </virtualType>

    <!-- validators infrastructure -->
    <virtualType name="OptimalCountryValidator" type="Magento\Payment\Gateway\Validator\CountryValidator">
        <arguments>
            <argument name="config" xsi:type="object">Commer\Optimal\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>
    <virtualType name="OptimalValidatorPool" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="country" xsi:type="string">OptimalCountryValidator</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- validators infrastructure -->
	
    <type name="Commer\Optimal\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">Commer\Optimal\Gateway\Config\Config</argument>
        </arguments>
    </type>

    <!-- END Settlement Report Section -->
    <type name="Magento\Config\Model\Config\Export\ExcludeList">
        <arguments>
            <argument name="configs" xsi:type="array">
                <item name="payment/optimal/merchant_id" xsi:type="string">1</item>
                <item name="payment/optimal/public_key" xsi:type="string">1</item>
                <item name="payment/optimal/private_key" xsi:type="string">1</item>
                <item name="payment/optimal/merchant_account_id" xsi:type="string">1</item>
                <item name="payment/optimal/kount_id" xsi:type="string">1</item>
            </argument>
        </arguments>
    </type>
</config>
